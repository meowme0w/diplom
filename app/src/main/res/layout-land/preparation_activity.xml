<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_recipe"
        android:id="@+id/text_enter_recipe"
        android:textColor="@color/font"
        android:textSize="@dimen/textSize"
        android:layout_margin="@dimen/margins"
        android:textStyle="bold|italic"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ok_button"
        android:layout_below="@+id/text_enter_recipe">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edit_recipe"
            android:textColor="@color/text" />

    </ScrollView>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:id="@+id/ok_button"
        android:background="@color/bgbutton"
        android:textColor="@color/font"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="false"
        android:onClick="Validation" />
</RelativeLayout>